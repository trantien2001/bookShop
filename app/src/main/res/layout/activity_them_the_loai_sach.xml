<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThemTheLoaiSach">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/imageViewLS"
        android:visibility="gone"/>
    <EditText
        android:padding="10dp"
        android:fontFamily="@font/serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewLS"
        android:hint="Nhập tên loại sách"
        android:layout_marginTop="20dp"
        android:id="@+id/edtTenLoaiSach"/>

    <Button
        android:backgroundTint="@color/color_menu"
        android:textColor="@color/white"
        android:background="@drawable/boder_btn_dangnhap"
        android:id="@+id/btnChonHALS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTenLoaiSach"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/serif"
        android:text="Chọn hình ảnh" />
    <Button
        android:backgroundTint="@color/color_menu"
        android:textColor="@color/white"
        android:background="@drawable/boder_btn_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChonHALS"
        android:text="Thêm"
        android:layout_marginTop="25dp"
        android:id="@+id/btnUpload"/>
</RelativeLayout>