<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:background="#FFD58C">
    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:id="@+id/imageviewgiohang"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="105dp">
        <TextView
            android:layout_marginLeft="3dp"
            android:text="Tên món hàng"
            android:textColor="#3A3A3A"
            android:id="@+id/textviewtengiohang"
            android:fontFamily="@font/serif"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_margin="3dp"
            android:text="Giá giỏ hàng"
            android:fontFamily="@font/serif"
            android:textSize="16sp"
            android:textColor="#f20"
            android:id="@+id/textviewgiagiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:focusable="false"
                    android:text="-"
                    android:padding="0dp"
                    android:id="@+id/buttonminus"
                    android:textSize="15sp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    />
                <Button
                    android:background="@null"
                    android:focusable="false"
                    android:text="1"
                    android:id="@+id/buttonvalues"
                    android:textSize="15sp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <Button
                    android:focusable="false"
                    android:text="+"
                    android:id="@+id/buttonplus"
                    android:padding="0dp"
                    android:textSize="15sp"
                    android:layout_width="35dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_delete"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btnDelete"
                    android:background="@null"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>