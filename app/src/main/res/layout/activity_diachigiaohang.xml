<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Diachigiaohang"
    android:background="@color/bookApp"
    android:weightSum="10">
    <LinearLayout
        android:layout_weight="9"
        android:background="@color/bookAppBold"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbardiachi"
            android:fontFamily="@font/cucho"
            app:titleTextColor="@color/white"
            android:background="@color/color_menu"
            app:title="Địa chỉ giao hàng"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

        <ListView
            android:id="@+id/listViewDiaChi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
    <LinearLayout
        android:background="@color/bookAppBold"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:fontFamily="@font/cucho"
            android:id="@+id/btnthemdiachi"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/color_menu"
            android:background="@drawable/boder_btn_dangnhap"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:text="Thêm địa chỉ mới"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>