<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewsanphammoinhat"
        android:layout_width="170dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:paddingTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FFD58C"
            android:background="@drawable/border_sanphamgiamgia">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageviewsanpham"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/textviewtensanpham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/black"
                    android:fontFamily="@font/serif"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textviewgiasanpham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Giá sản phẩm"
                    android:textColor="#f20"
                    android:fontFamily="@font/serif"
                    android:textSize="12sp" />
            </LinearLayout>
            <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:src="@drawable/hot" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>