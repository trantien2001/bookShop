<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewsanphammoinhat"
        app:cardCornerRadius="7dp"
        android:elevation="30dp"
        android:layout_margin="5dp"
        android:layout_width="150dp"
        android:layout_height="210dp" >
        <RelativeLayout
            android:backgroundTint="#FFD58C"
            android:background="@drawable/border_sanphamgiamgia"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageviewsanpham"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="4dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textviewtensanpham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/serif"
                    android:gravity="center"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textviewgiasanpham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/serif"
                    android:gravity="center"
                    android:text="Giá sản phẩm"
                    android:textColor="#f20"
                    android:textSize="12sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_above="@+id/imageviewsanpham"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/sale"
                tools:ignore="NotSibling"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>